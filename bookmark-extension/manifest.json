{
  "manifest_version": 2,

  "name": "Study Plan Bookmarks",
  "description": "This extension helps you add and tag your Bookmarks",
  "version": "1.0",

  "browser_action": {
    "default_icon": "gm.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "unlimitedStorage",
    "cookies",
    "history",
    "storage",
    "webNavigation",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "frame.html",
    "extension-login.html",
    "js/**",
    "css/**",
    "lib/js/**",
    "lib/css/**",
    "lib/fonts/**"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "css": ["lib/css/bootstrap-content-script.css","lib/css/toastr.min.css","css/page.css"],
      "js": ["lib/js/bluebird.min.js",
        "lib/js/jquery-3.2.1.min.js",
        "lib/js/superagent.min.js",
        "lib/js/toastr.min.js",
        "js/config.js",
        "js/common.js",
        "js/chrome_storage.js",
        "js/storage-proxy.js",
        "js/page_link_colors.js",
        "js/page_sites.js",
        "js/page.js",
        "js/bookmarks-render.js",
        "js/init.js",
        "js/loader.js"],
      "run_at" : "document_idle"
    }
  ],
  "background": {
    "scripts": ["lib/js/bluebird.min.js",
      "lib/js/superagent.min.js",
      "lib/js/jquery-3.2.1.min.js",
      "lib/js/toastr.min.js",
      "lib/js/pouchdb.js",
      "lib/js/pouchdb.find.js",
      "js/config.js",
      "js/common.js",
      "js/storage.js",
      "js/chrome_storage.js",
      "js/background.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' 'unsafe-inline'; object-src 'self'"
}
